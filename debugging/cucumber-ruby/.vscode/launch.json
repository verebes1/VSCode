{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cucumber",
            "type": "ruby_lsp",
            "request": "launch",
            "program": "cucumber --color",
            "internalConsoleOptions": "openOnSessionStart",
            "postDebugTask": "stopCucumber"
        },
        {
            "name": "Cucumber current feature file",
            "type": "ruby_lsp",
            "request": "launch",
            "program": "cucumber ${file} --color",
            "internalConsoleOptions": "openOnSessionStart",
            "postDebugTask": "stopCucumber"
        },
        {
            "name": "Cucumber scenario under cursor",
            "type": "ruby_lsp",
            "request": "launch",
            "program": "cucumber ${file}:${lineNumber} --color",
            "internalConsoleOptions": "openOnSessionStart",
            "postDebugTask": "stopCucumber"
        }
    ]
}